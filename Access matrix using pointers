
#include<stdio.h>
main ( ){
   int a[100] [100], i,n,j;
   
  
printf("enter dimensions of matrix\n");
scanf("%d",&n);
   printf ("Enter %d elements of 2D array\n",n*n);
   for (i=0; i<n; i++){
      for (j=0; j<n; j++){
         scanf ("%d", *(a+i)+j);
      }
   }
  int p=&a[0][0];
   printf ("elements of 2d array are\n");
   for (i=0; i<n; i++){
      for (j=0; j<n; j++){
         printf ("%d \t",*(*(a+i)+j));
      }
      printf ("\n");
   }
   
}
